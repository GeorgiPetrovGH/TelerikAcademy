@model IEnumerable<MvcTemplate.Web.Areas.Private.Models.Comments.CommentViewModel>

<ul class="media-list">
    <li class="media">
        <div class="media-body">
            @foreach (var item in Model)
            {
                <p>
                    <span class="glyphicon glyphicon-user"></span>
                    <span>Created by </span>
                    @item.CreatorName
                    <span>on </span>
                    @item.CreatedOn
                </p>
                <p>
                    @item.Name
                </p>
                <p class="break-word">
                    @item.Text
                </p>
                <br />
            }
        </div>
    </li>
</ul>

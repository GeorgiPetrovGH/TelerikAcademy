@model IEnumerable<MvcTemplate.Web.Areas.Private.Models.Comments.CommentViewModel>

<ul class="media-list">
    <li class="media">
        <div class="media-body">
            @foreach (var item in Model)
            {
                <h4 class="media-heading">
                    <span class="label label-primary">@item.CreatorName</span>
                    <span> commented on</span>
                    <span class="label label-default">@item.CreatedOn</span>
                </h4>
                <br />
                <p class="break-word">
                    @item.Text
                </p>
                <br />
            }
        </div>
    </li>
</ul>

@model MvcTemplate.Web.Areas.Private.Models.Comments.CommentInputModel

@using (Ajax.BeginForm("Add", "Comments", new { area = "Private", placeId = int.Parse(Url.RequestContext.RouteData.Values["id"].ToString()) }, new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST"
}, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder = "Add a comment...", required = "required", rows = "4" })
    </div>    
    <div class="form-group">
        <input type="submit" class="btn btn-submit" value="Post comment" />
    </div>
}
<div  class="row">
    @foreach(var image in Model.Images)
    {
        <div class="col-md-4">
            <img src="@(image != null ? @Url.Action("GetImageById", "Images", new { id = image.Id, area = "Private" }) : Url.Content("~/Images/default.png"))" />
        </div>
    }
</div>
